<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!!{% endblock %}</title>

        <!-- Le styles -->
        {% stylesheets '@bootstrap_css' %}
        <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}
        <style>
            body {
                padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
            }
        </style>
        {% stylesheets '@bootstrap_css_responsive' %}
        <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        {% javascripts '@bootstrap_html5shiv' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->

        <script src="frontend/bower_components/jquery/jquery.min.js"></script>

        {% block stylesheets %}{% endblock %}
        <!-- Bootstrap -->
        {% block javascripts_header %}{% endblock %}
    </head>
    <body id="main_container">

        {% block body %}{% endblock %}

        {% javascripts '@bootstrap_js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block javascripts_footer %}{% endblock %}
    </body>
</html>
